<% if logged_in? %>

  <p>ログインユーザ: <%= current_user.name %>さん</p>

<h1>タスク一覧</h1>
<h2><%= link_to 'タスク新規作成', new_task_path, class:"btn btn-primary" %></h2>



<% if @tasks.any? %>
<table class='table table-striped'>
    <thead>
        <tr>
       <th>ステータス</tt>
       <th>タスク内容</th>
       <th>詳細確認</th>
       <th>編集する</th>
       <th>削除する</th>
        </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
       <tr>
       <td><%= task.status %></td>
       <td><%= task.content %></td>
       <td><%= link_to '詳細', task_path(task) %></td>
       <td><%= link_to '編集', edit_task_path(task) %></td>
       <td><%= link_to '削除', task_path(task), method: :delete, data: { confirm: '本当に削除してよろしいですか'} %></td>
       <tr>
    <% end %>
    </tbody>
</table>


<% end %>

<div>
    <%= paginate @tasks %>
</div>

<% else %>
<%= link_to '新規登録はこちら！', signup_path, class: 'btn btn-primary' %>
<% end %>


